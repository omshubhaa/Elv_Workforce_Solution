﻿@using Microsoft.AspNetCore.Identity
@model IdentityRole

<head>
    <link rel="stylesheet" href="~/css/Role.css" />
</head>

<div class="container">
    <div class="form-box">
        <h5>Create New Role</h5>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="error-message"></div>
            <div class="input-group">
                <label asp-for="Name" class="input-label"></label>
                <input asp-for="Name" class="input-field" aria-required="true" />
                <span asp-validation-for="Name" class="error-message"></span>
            </div>
            <button type="submit" class="submit-btn">Save</button>
        </form>
    </div>
</div>
