@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-container">
    <div class="login-form">
        <section>
            <form id="account" method="post">
                <h2 class="login-subtitle">Use a local account to log in.</h2>
                <hr class="divider" />
                <div asp-validation-summary="ModelOnly" class="error-message" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Input.Role" class="form-control">
                        <option value="">Select Role</option>
                        <option value="Candidate">Candidate</option>
                        <option value="Employer">Employer</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <label asp-for="Input.Role" class="form-label">Role</label>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <div class="checkbox-group">
                    <label asp-for="Input.RememberMe" class="checkbox-label">
                        <input class="checkbox" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="btn-primary">Log in</button>
                </div>

                <div class="links">
                    <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}