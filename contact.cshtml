@{
    ViewData["Title"] = "Contact Us";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: url('/image/background.jpg') no-repeat center center fixed;
        background-size: cover;
        color: white;
    }

    .contact-container {
        max-width: 1100px;
        margin: 50px auto;
        padding: 40px 20px;
        background: rgba(0, 0, 0, 0.7);
        border-radius: 10px;
    }

    .contact-title {
        text-align: center;
        font-size: 36px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .contact-description {
        text-align: center;
        max-width: 800px;
        margin: auto;
        font-size: 16px;
        opacity: 0.8;
    }

    .contact-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-top: 40px;
    }

    /* Left Section - Contact Details */
    .contact-info {
        flex: 1;
        max-width: 40%;
    }

    .info-item {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.1);
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

        .info-item i {
            font-size: 22px;
            margin-right: 15px;
            background: white;
            color: black;
            padding: 12px;
            border-radius: 50%;
        }

        .info-item h4 {
            margin: 0;
            font-size: 18px;
        }

        .info-item p {
            margin: 0;
            font-size: 14px;
            opacity: 0.8;
        }

    /* Right Section - Contact Form */
    .contact-form {
        flex: 1;
        max-width: 50%;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        color: black;
    }

        .contact-form h3 {
            font-size: 22px;
            margin-bottom: 15px;
            text-align: center;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
    }

    .send-btn {
        width: 100%;
        background: #00bcd4;
        border: none;
        padding: 12px;
        font-size: 16px;
        color: white;
        cursor: pointer;
        transition: 0.3s;
        border-radius: 5px;
    }

        .send-btn:hover {
            background: #0097a7;
        }
</style>

<div class="contact-container">
    <h1 class="contact-title">Contact Us</h1>
    <p class="contact-description">
        Have questions or need assistance? We're here to help! Reach out to us for any inquiries, support, or feedback. Whether you're an employer looking for top talent or a candidate seeking new opportunities, we’re just a message away. Fill out the form below, and we’ll get back to you as soon as possible!
    </p>

    <div class="contact-content">
        <!-- Left Section: Contact Details -->
        <div class="contact-info">
            <div class="info-item">
                <i class="fas fa-home"></i>
                <div>
                    <h4>Address</h4>
                    <p>Maharajgunj, Kathmandu</p>
                </div>
            </div>

            <div class="info-item">
                <i class="fas fa-phone-alt"></i>
                <div>
                    <h4>Phone</h4>
                    <p>+977 9727435910</p>
                </div>
            </div>

            <div class="info-item">
                <i class="fas fa-envelope"></i>
                <div>
                    <h4>Email</h4>
                    <p>elvworksolution@gmail.com</p>
                </div>
            </div>
        </div>

        <!-- Right Section: Contact Form -->
        <div class="contact-form">
            <h3>Send Message</h3>
            <form>
                <input type="text" placeholder="Full Name" class="form-control">
                <input type="email" placeholder="Email" class="form-control">
                <textarea placeholder="Type your Message..." class="form-control"></textarea>
                <button type="submit" class="send-btn">Send</button>
            </form>
        </div>
    </div>
</div>

<!-- FontAwesome for Icons (Include this in _Layout.cshtml if not already there) -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
