@model Job

<h2>Edit Job Posting</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Company</label>
        <input asp-for="Company" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Location</label>
        <input asp-for="Location" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Job Type</label>
        <input asp-for="JobType" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Salary</label>
        <input asp-for="Salary" class="form-control" type="number" required />
    </div>

    <button type="submit" class="btn btn-warning">Update Job</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Cancel</a>
